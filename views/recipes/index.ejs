<% layout('layouts/boilerplate')%>
<h1>All Recipes</h1>
<div>
    <a href="/recipes/new">Add Another Recipe</a>
</div>

<% for (let recipe of recipes) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(recipe.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=recipe.images[0].url%>">
                    <% }else {%>
                        <img class="img-fluid" alt=""
                            src="https://res.cloudinary.com/dprujjry9/image/upload/v1619564057/HomeSliceHome/myrecipe_ft0iph.jpg">
                        <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> <%= recipe.title %> </h5>
                    <p class="card-text"> 
                        <small class="text-muted">Servings: <%= recipe.servings %> </small> 
                    </p>
                    <p class="card-text"> <%= recipe.description %> </p>
                    <a class="btn btn-primary" href="/recipes/<%=recipe._id%>">View <%=recipe.title%> </a>
                </div>
            </div>
        </div>
    </div>
<% }%>